[bar/bottombar]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 25
bottom = true

background = #00000000
foreground = #55FFFFFF

font-0 = Open Sans:pixelsize=10;1
font-1 = FontAwesome:pixelsize=10;1

separator = "  "
modules-left =
modules-center = battery temperature cpu memory alsa
modules-right =

tray-position = right
tray-padding = 5
tray-transparent = true

override-redirect = true
wm-restack = i3

[module/alsa]
type = internal/alsa
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

master-mixer = Master
interval = 5

format-volume = <label-volume>
label-volume = %{T2}%{T-}   %percentage%%

[module/memory]
type = internal/memory
label = %{T2}%{T-}   %percentage_used%%
label-padding = 10

[module/cpu]
type = internal/cpu
format = <label>
label = %{T2}%{T-}   %percentage%%

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 60
label = %{T2}%{T-}    %temperature%
label-padding = 10

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
poll-interval = 5
label = %{T2}%{T-}   %percentage%

format-charging =  <label-charging>

format-discharging = <label-discharging>
label-charging = %{T2}%{T-}   %percentage%%
label-discharging = %{T2}%{T-}   %percentage%%
label-full = %{T2}%{T-}   %percentage%%