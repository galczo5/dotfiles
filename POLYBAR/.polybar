[global/wm]
margin-top = 5
margin-bottom = 5

[bar/bar1]
monitor = ${env:MONITOR:DP-0}
width = 100%
height = 25
offset-x = 0
offset-y = 5

bottom = true

background = #00000000
foreground = #888888

spacing = 1
padding-left = 4
padding-right = 4
module-margin-left = 1
module-margin-right = 2

font-0 = hack:pixelsize=12;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=14;0

modules-left =
modules-center = i3
modules-right =

tray-position = right
tray-padding = 0
tray-transparent = true

override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/bar2]
monitor = ${env:MONITOR:DP-2}
width = 100%
height = 25
offset-x = 0
offset-y = 5

bottom = true
background = #00000000
foreground = #888888

spacing = 1
padding-left = 4
padding-right = 4
module-margin-left = 1
module-margin-right = 2

font-0 = hack:pixelsize=12;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=14;0

modules-left =
modules-center = i3
modules-right =

override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/topbar1]
monitor = ${env:MONITOR:DP-0}
width = 100%
height = 25
offset-x = 0
offset-y = 5
padding-right = 2

background = #00000000
foreground = #888888

font-0 = Source Sans Pro:pixelsize=14;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=14;0

modules-left =
modules-center = date
modules-right = wireless-network temperature cpu memory volume

override-redirect = true

[bar/topbar2]
monitor = ${env:MONITOR:DP-2}
width = 100%
height = 25
offset-x = 0
offset-y = 5
padding-right = 2

background = #00000000
foreground = #888888

font-0 = Source Sans Pro:pixelsize=14;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=14;0

modules-left =
modules-center = date
modules-right = wireless-network temperature cpu memory volume

override-redirect = true

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 5
label-mode-foreground = #ffffff

label-unfocused-foreground = #888888
label-unfocused-padding = 1

label-visible-foregroud = #888888
label-visible-padding = 1

label-focused-foreground = #ffffff
label-focused-padding = 1

label-urgent-padding = 1

[module/date]
type = internal/date
interval = 5

date = "%d/%m/%y"
date-alt = " %d"

time = " %H:%M:%S"
time-alt =  %H:%M

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = ""
label-volume-foreground = ${root.foreground}
label-muted = muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = │
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground =

[module/wireless-network]
type = internal/network
interface = wlp0s20f0u1

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = %essid% %downspeed:9%
label-connected-foreground = #eefafafa
;label-connected-padding = 10

label-disconnected = not connected
label-disconnected-foreground = #66ffffff

[module/memory]
type = internal/memory
label = %gb_used%/%gb_free%
label-padding = 10

[module/cpu]
type = internal/cpu
format = <label>
label = CPU %percentage%

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 60
label = TEMP %temperature%
label-padding = 10