[global/wm]
margin-top = 5
margin-bottom = 5

[bar/traybar]
monitor = ${env:MONITOR:DP-0}
width = 100%
height = 25
bottom = true

background = #00000000
foreground = #00000000

modules-left =
modules-center = date
modules-right =

tray-position = right
tray-padding = 5
tray-transparent = true

override-redirect = true
wm-restack = i3

[bar/topbar1]
monitor = ${env:MONITOR:DP-0}
width = 100%
height = 25
offset-x = 0
offset-y = 5
padding-right = 5
padding-left = 5

background = #00000000
foreground = #07322B

font-0 = Source Sans Pro:pixelsize=12;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=14;0

modules-left = i3 title
modules-center = date
modules-right = wireless-network temperature cpu memory volume

override-redirect = true
wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/topbar2]
monitor = ${env:MONITOR:DP-2}
width = 100%
height = 25
offset-x = 0
offset-y = 5
padding-right = 5
padding-left = 5

background = #00000000
foreground = #07322B

font-0 = Source Sans Pro:pixelsize=12;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=14;0

modules-left = i3 title
modules-center = date
modules-right = wireless-network temperature cpu memory volume

override-redirect = true
wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 5

label-unfocused-foreground = #07322B
label-unfocused-padding = 1
label-visible-foregroud = #07322B
label-visible-padding = 1
label-focused-foreground = #475544
label-focused-padding = 1
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 5

date = "%d/%m/%y"
date-alt = " %d"

time = " %H:%M"
time-alt =  %H:%M

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = ""
label-volume-foreground = ${root.foreground}
label-muted = muted

bar-volume-width = 10
bar-volume-gradient = true
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2

[module/memory]
type = internal/memory
label = %gb_used%/%gb_free%
label-padding = 10

[module/cpu]
type = internal/cpu
format = <label>
label = CPU %percentage%

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 60
label = TEMP %temperature%
label-padding = 10

[module/title]
type = internal/xwindow
label-maxlen = 50
format-padding = 5
format-foregroud = #4F5B47

[module/wireless-network]
type = internal/network
interface = enp0s20f0u1

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = %essid% %downspeed:9%

label-disconnected = not connected